<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="24dp" android:layout_gravity="top" android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:text="Say one of the words below!" android:textAlignment="center"/>
    <ListView android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/list_view" android:background="@drawable/border" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginTop="100dp" android:textAlignment="center"/>
    <Button android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/quit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="Quit"/>
</FrameLayout>
